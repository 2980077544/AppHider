<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon_app"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:contentDescription="图标" />

    <TextView
        android:id="@+id/label_app"
        android:text="App Label"
        android:layout_toEndOf="@+id/icon_app"
        android:layout_toStartOf="@+id/btn_add"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@+id/btn_star"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_add_24dp" />

    <com.github.ivbaranov.mfb.MaterialFavoriteButton
        android:id="@+id/btn_star"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@+id/btn_switch"
        app:mfb_type="heart" />

    <Switch
        android:id="@+id/btn_switch"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>